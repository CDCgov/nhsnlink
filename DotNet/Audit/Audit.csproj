<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>89e2822a-1e90-4904-9d40-8dc0fbea1ed4</UserSecretsId>
	<RootNamespace>LantanaGroup.Link.Audit</RootNamespace>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
  </PropertyGroup>

	<PropertyGroup>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<NoWarn>$(NoWarn);1591</NoWarn>
	</PropertyGroup>

	<ItemGroup>
	  <Compile Remove="Presentation\Services\**" />
	  <Content Remove="Presentation\Services\**" />
	  <EmbeddedResource Remove="Presentation\Services\**" />
	  <None Remove="Presentation\Services\**" />
	</ItemGroup>

  <ItemGroup>
	<PackageReference Include="Azure.Identity" Version="1.*" />
	<PackageReference Include="AspNetCore.HealthChecks.UI.Client" Version="9.*" />
	<PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="8.*" />
	<PackageReference Include="Microsoft.EntityFrameworkCore" Version="8.*" />
	<PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="8.*">
	  <PrivateAssets>all</PrivateAssets>
	  <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
	</PackageReference>
	<PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="8.*" />
	<PackageReference Include="Microsoft.Extensions.Compliance.Redaction" Version="8.*" />
	<PackageReference Include="Microsoft.Extensions.Telemetry" Version="8.*" />
	<PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.*" />
	<PackageReference Include="Serilog.AspNetCore" Version="8.*" />
	<PackageReference Include="Serilog.Enrichers.Span" Version="3.*" />
	<PackageReference Include="Serilog.Exceptions" Version="8.*" />
	<PackageReference Include="Serilog.Expressions" Version="4.*" />
	<PackageReference Include="Serilog.Sinks.Grafana.Loki" Version="8.*" />
	<PackageReference Include="Swashbuckle.AspNetCore" Version="6.*" />
	<PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="7.*" />
	<PackageReference Include="System.Text.Json" Version="8.*" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Shared\Shared.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Application\Factory\" />
    <Folder Include="Infrastructure\Extensions\" />
    <Folder Include="Migrations\" />
    <Folder Include="Presentation\Models\" />
  </ItemGroup>

</Project>
