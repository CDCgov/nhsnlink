{
  "ServiceInformation": {
    "ServiceName": "Link Terminology Service"
  },
  "EnableSwagger": false,
  "Terminology": {
    "Path": "data/"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Grafana.Loki" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "",
          "labels": [
            {
              "key": "app",
              "value": "link-cloud"
            },
            {
              "key": "component",
              "value": "Terminology"
            }
          ],
          "propertiesAsLabels": [ "app", "component" ]
        }
      },
      { "Name": "Console" }
    ]
  },
  "AllowedHosts": "*"
}
