{
  "ServiceInformation": {
    "ServiceName": "Link Submission Service"
  },
  "EnableSwagger": true,
  "KafkaConnection": {
    "BootstrapServers": [ "localhost:9092" ],
    "ClientId": ""
  },
  "ServiceRegistry": {
    "ReportServiceUrl": "https://localhost:7110"
  },
  "MongoDB": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "linkReportDb"
  },
  "Features:DownloadReportEnabled": true,
  "Authentication": {
    "EnableAnonymousAccess": true,
    "Schemas": {
      "LinkBearer": {
        "Authority": "https://localhost:7004",
        "ValidateToken": true
      }
    }
  },
  "LinkTokenService": {
    "Authority": "https://localhost:7004",
    "LinkAdminEmail": "linkadmin@lantanagroup.com",
    "TokenLifespan": 10
  },
  "DatabaseProvider": "SqlServer",
  "ConnectionStrings": {
    "DatabaseConnection": "Data Source;Initial;Integrated Security=True;"
  },
  "CORS": {
    "AllowAllOrigins": true,
    "AllowedOrigins": [ "http://localhost:5218", "http://localhost:4200" ],
    "AllowAllMethods": true,
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
    "AllowAllHeaders": true,
    "AllowedHeaders": [ "Authorization", "Content-Type", "Accept", "Origin", "Access-Control-Allow-Origin", "User-Agent", "X-Requested-With" ],
    "AllowedExposedHeaders": [ "X-Pagination" ],
    "AllowCredentials": true,
    "MaxAge": 600
  },
  "Telemetry": {
    "EnableTelemetry": true,
    "EnableRuntimeInstrumentation": false,
    "EnableOtelCollector": true,
    "OtelCollectorEndpoint": "http://localhost:55690",
    "EnableAzureMonitor": false
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Grafana.Loki" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://localhost:3100",
          "labels": [
            {
              "key": "app",
              "value": "link-cloud"
            },
            {
              "key": "component",
              "value": "Submission"
            }
          ],
          "propertiesAsLabels": [ "app", "component" ]
        }
      }
    ]
  },
  "Kestrel": {
    "Endpoints": {
      "http": {
        "Url": "http://localhost:5046"
      },
      "https": {
        "Url": "https://localhost:7046"
      }
    }
  }
}
