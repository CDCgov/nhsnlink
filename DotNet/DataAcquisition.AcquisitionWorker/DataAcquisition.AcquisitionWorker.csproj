    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>df7922a5-2e2e-48ae-aa6d-cbe8f8711ed9</UserSecretsId>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
